{
  "name": "xkpasswd-wasm",
  "description": "XKCD password generator",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/xkpasswd/xkpasswd-rs.git"
  },
  "type": "module",
  "scripts": {
    "wasm:base": "wasm-pack build --target web --out-dir=www/xkpasswd",
    "wasm:dev": "concurrently npm:wasm:dev:en npm:wasm:dev:fr npm:wasm:dev:pt",
    "wasm:dev:en": "npm run wasm:base -- --out-name=xkpasswd-en --no-default-features --features=wasm_dev --features=lang_en",
    "wasm:dev:fr": "npm run wasm:base -- --out-name=xkpasswd-fr --no-default-features --features=wasm_dev --features=lang_fr",
    "wasm:dev:pt": "npm run wasm:base -- --out-name=xkpasswd-pt --no-default-features --features=wasm_dev --features=lang_pt",
    "wasm:prod": "npm run wasm:prod:en && npm run wasm:prod:fr && npm run wasm:prod:pt",
    "wasm:prod:en": "npm run wasm:base -- --out-name=xkpasswd-en --no-default-features --features=wasm --features=lang_en",
    "wasm:prod:fr": "npm run wasm:base -- --out-name=xkpasswd-fr --no-default-features --features=wasm --features=lang_fr",
    "wasm:prod:pt": "npm run wasm:base -- --out-name=xkpasswd-pt --no-default-features --features=wasm --features=lang_pt",
    "lint:ts": "tsc",
    "lint:es": "eslint . --ext .ts --ext .tsx --fix",
    "lint": "concurrently npm:lint:ts npm:lint:es",
    "predev": "npm run wasm:dev",
    "vite:dev": "VITE_GIT_SHA=$(git rev-parse --short HEAD) vite",
    "vite:prod": "VITE_GIT_SHA=$(git rev-parse --short HEAD) vite build",
    "dev": "concurrently npm:lint npm:vite:dev",
    "prebuild": "npm run wasm:prod",
    "build": "concurrently npm:lint npm:vite:prod",
    "preserve": "npm run build",
    "serve": "vite preview",
    "predeploy:staging": "npm run build",
    "deploy:staging": "surge dist xkpasswd.surge.sh"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "preact": "^10.11.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.4.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.5.0",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.6.4",
    "vite": "^4.1.4",
    "vite-plugin-top-level-await": "^1.2.2",
    "vite-plugin-wasm": "^3.1.0",
    "vite-tsconfig-paths": "^4.0.7"
  }
}
